<!DOCTYPE html>
<html>
<head>
	<title>Muziqala</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
</head>
<body>

<nav class="navbar navbar-inverse navbar-static-top">
	<ul class="nav navbar-nav">
		<li><a href="/">Home</a></li>
		<% if session['auth'] %>
			<li><a href="/sessions/show">Profile</a></li>
			<li><a href="/auth/logout">Logout</a></li>
		<% else %>
			<li><a href="/auth/facebook">Login via Facebook</a></li>
			<li><%= link_to 'Login', new_session_path %></li>
		<% end %>
	</ul>
</nav>

<%= form_tag artists_path, method: "get", html: { class: "form" } do %>
 <div class="form-group col-xs-4">
   <%= text_field_tag(:artist_name, "", placeholder: "Enter artist name", class: "form-control") %>
   <%= submit_tag "Search", class: "btn btn-primary" %>
   all: <%= radio_button_tag "all", value = "all" %>
   artist: <%= radio_button_tag 'artist', value = "artist"  %>
   album: <%= radio_button_tag 'album', value = "album"  %>
   track title: <%= radio_button_tag 'track', value = "track"  %>
 </div>
<% end %>

<%= yield %>

</body>
</html>
