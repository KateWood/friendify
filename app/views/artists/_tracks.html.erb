<h1 class="page-header">Song Titles Matching <%= params[:search_keywords] %></h1>
<table class="table">
    <% @tracks.each do |track| %>
      <tr>
        <td><%= form_for @track do |f| %>
				<% f.label :spotify_id %>
				<%= f.hidden_field :spotify_id, :value => track.id %>
				<%= f.submit 'Add to Playlist' %>
			<% end %></td>
		<td><audio controls style="width:45px">
        <source src="<%= track.preview_url %>">
        </audio></td>
        <td><%= track.name %></td>
        <td><%= track.artists[0].name%></td>
        <td><%= track.duration_ms %></td>
       </tr>
    <% end %> 
</table>


<%= link_to "Back", :back %>