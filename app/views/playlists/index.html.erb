<h1> View All Playlists</h1>

<table>
  <tr>
    <th> Playlist Name</th>
  </tr>

  <% @playlist.each do |playlist| %>
  <tr>
    <td> <%= link_to playlist.name, playlist_path(playlist) %> </td>
    <td><%= link_to 'Destroy', playlist_path(playlist),
                    method: :delete,
                    data: { confirm: 'Are you sure you want to delete this playlist?' } %></td>
  </tr>
  <% end %>
</table>